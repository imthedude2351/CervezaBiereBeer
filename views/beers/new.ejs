<%- include('../partials/header') %>

<h2>Enter a New Beer</h2>
<form id="new-form" action="/beers" method="POST">
    <label>Title:</label>
    <input type="text" name="title">
    <label>Typer of Beer</label>
    <select name="typeBeer">
        <option value="Pale Lager and Pilsner">Pale Lager and Pilsner</option>
        <option value="Pale Ale">Pale Ale</option>
        <option value="India Pale Ale">India Pale Ale</option>
        <option value="Double India Pale Ale">Double India Pale Ale</option>
        <option value="Porter">Porter</option>
        <option value="Stout">Stout</option>
        <option value="Belgian-Style Ale">Belgian-Style Ale</option>
    </select>
    <label>Percentage</label>
    <input type="text" name="beerPercent">
    <label>Brewery</label>
    <input type="text" name="brewery">

    <input type="submit" value="New Beer">

</form>


<%- include('../partials/footer') %>